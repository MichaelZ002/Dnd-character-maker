    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h2>Start a New Character</h2>
                <input id="input" placeholder="  Enter character name">


                <select id="class">
                    <option value="class"> class </option>
                </select>

                <select id="spells">
